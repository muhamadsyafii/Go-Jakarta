<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="top"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/badge_padding"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="@dimen/image_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_140dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_namePuskesmas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CardImage"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/badge_padding"
        android:layout_marginRight="@dimen/badge_padding"
        android:layout_marginBottom="@dimen/size_12dp"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/name_puskesmas"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryBlack" />

</RelativeLayout>